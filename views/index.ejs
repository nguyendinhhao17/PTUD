<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Hệ thống quản lý</title>
  <link rel="stylesheet" href="/css/globals.css">
</head>
<body>

<%- include('partials/header') %>

<main class="container">
  <% if(user){ %>
    <!-- Sidebar -->
    <aside class="sidebar">
      <%- include('partials/sidebar') %>
    </aside>

    <!-- Nội dung chính -->
    <section id="main-content" class="content">
      <% if(page === 'home'){ %>
        <%- include('pages/'+'home') %>
      <% } else { %>
        <%- include('pages/' + page) %>
      <% } %>
    </section>
  <% } else { %>
    <!-- Nếu chưa login, hiển thị login -->
    <section id="main-content" class="content">
      <%- include('pages/dangnhap') %>
    </section>
  <% } %>
</main>

<%- include('partials/footer') %>

<script src="/js/1_main.js"></script>
</body>
</html>
